<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C62828"
    tools:context=".DogsLoverUserRegistrationPage">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:id="@+id/first">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SignUP"
            android:textColor="#fff"
            android:textSize="50dp"
            android:textStyle="italic"
            />
    </LinearLayout>

    <ScrollView
        android:id="@+id/newscrollview"
        android:layout_below="@id/first"
        android:layout_width="fill_parent"
        android:scrollbars="vertical"
        android:layout_height="fill_parent">
        <ScrollView
            android:id="@+id/newscrollviewtwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/second"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/first"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#fff"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/newusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="UserName"
            android:maxLines="1"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:inputType="textCapSentences"
            style="@style/CardView"
            android:textSize="20dp"
            />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Address"
             android:textColor="#fff"
             android:textSize="20dp"
             />
        <EditText
            android:id="@+id/newaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="UserAddress"
            android:maxLines="1"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:inputType="textCapSentences"
            style="@style/CardView"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City"
            android:textColor="#fff"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/newcity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="UserCity"
            android:maxLines="1"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:inputType="textCapSentences"
            style="@style/CardView"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="State"
            android:textColor="#fff"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/newstate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="UserState"
            android:maxLines="1"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:inputType="textCapSentences"
            style="@style/CardView"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Street Name"
            android:textColor="#fff"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/newstreetname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dogs'Street Name"
            android:maxLines="1"
            android:inputType="textCapSentences"
            style="@style/CardView"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#fff"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/newemailid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="UserEmail"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            style="@style/CardView"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textColor="#fff"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/newphonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="UserPhone"
            android:maxLines="1"
            android:maxLength="13"
            android:digits="0123456789+ "
            android:inputType="phone"
            style="@style/CardView"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#fff"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/newpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="UserPassword"
            android:maxLines="1"
            android:maxLength="10"
            android:inputType="textPassword"
            style="@style/CardView"
            android:textSize="20dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            style="@style/CardView"
            android:textSize="20dp"
            android:background="@drawable/newroundedbutton"
            android:id="@+id/newbtnsubmit"
            />
    </LinearLayout>
